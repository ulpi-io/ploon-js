{
  "name": "ploon-cli",
  "version": "1.0.4",
  "description": "CLI tool for PLOON (Path-Level Object Oriented Notation) - Convert JSON/XML/YAML to the most token-efficient format",
  "type": "module",
  "bin": {
    "ploon": "./bin/ploon.mjs"
  },
  "files": [
    "bin",
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist bin",
    "prepublishOnly": "pnpm build && pnpm typecheck"
  },
  "keywords": [
    "ploon",
    "cli",
    "converter",
    "json",
    "xml",
    "yaml"
  ],
  "author": "Ciprian Spiridon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ulpi-io/ploon-js.git"
  },
  "homepage": "https://ploon.ai",
  "bugs": {
    "url": "https://github.com/ulpi-io/ploon-js/issues"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "consola": "^3.2.3",
    "ploon": "^1.0.3",
    "tiktoken": "^1.0.22"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsdown": "^0.2.13",
    "typescript": "^5.3.3"
  }
}
